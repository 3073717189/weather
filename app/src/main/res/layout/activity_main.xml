<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true"
    >

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/city_list"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:background="@drawable/add" />

                <TextView
                    android:id="@+id/county_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp" />
                <Spinner
                    android:id="@+id/city_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageButton
                    android:id="@+id/setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_setting" />
            </LinearLayout>

            <TextView
                android:id="@+id/temperature_now"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="60dp" /> <!--当前温度-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/weather_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"
                    android:paddingRight="20dp"/> <!--今日天气-->
                <TextView
                    android:id="@+id/temp_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" /> <!--今日温度-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/air"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"><!--空气质量-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp" /><!--增加空白区域使界面更美观-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/air" />

                        <TextView
                            android:id="@+id/aqi_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_margin="5dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/pollute" />

                        <TextView
                            android:id="@+id/aqi_primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>

                        <TextView
                            android:id="@+id/aqi_pm2.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="10dp"
                android:padding="10dp"
                app:cardBackgroundColor="#00000000"

                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/forecast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:paddingTop="15dp"><!--七天天气预报-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="预报"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/forecast_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="10dp"
                android:padding="10dp"
                app:cardBackgroundColor="#00000000"

                app:cardCornerRadius="2dp">
            <LinearLayout
                android:id="@+id/hourly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_hourly"
                    />



            </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="10dp"
                android:padding="10dp"
                app:cardBackgroundColor="#00000000"

                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/wind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"><!--风-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/wind" />

                        <TextView
                            android:id="@+id/winddir_now"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"/>   <!--风向-->
                        <TextView
                            android:id="@+id/windscale_now"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"/> <!--风力等级-->
                        <TextView
                            android:id="@+id/windspeed_now"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"/> <!--风速-->
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="10dp"
                android:padding="10dp"
                app:cardBackgroundColor="#00000000"

                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/life"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_margin="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"><!--生活建议-->

                    <TextView
                        android:id="@+id/spt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        />

                    <TextView
                        android:id="@+id/cw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/drsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/comf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:layout_marginBottom="15dp"/>
                    <TextView
                        android:id="@+id/life_button"
                        android:text="查看全部生活建议"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:padding="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/radius_textview"

                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"><!--其他-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="50dp"
                            android:text="相对湿度"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>

                        <TextView
                            android:id="@+id/humidity_now"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="50dp"
                            android:text="降水量"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>

                        <TextView
                            android:id="@+id/precip_now"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="50dp"
                            android:text="大气压强"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>

                        <TextView
                            android:id="@+id/pressure_now"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="50dp"
                            android:text="能见度"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>

                        <TextView
                            android:id="@+id/vis_now"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="50dp"
                            android:text="当前云量"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>

                        <TextView
                            android:id="@+id/dew_now"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="50dp"
                            android:text="体感温度"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>

                        <TextView
                            android:id="@+id/feel_temp_now"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
</ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>